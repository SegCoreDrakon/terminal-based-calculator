Index:
  StandardLibrary: true

CompileFlags:
  Add: [-xc++, -std=c++20, -pedantic-errors, -Wconversion, -Wfloat-conversion, -Wall, -Werror, -O0, -ggdb3]
  Compiler: g++

Diagnostics:
  ClangTidy:
    Add: modernize*
    Remove: modernize-use-trailing-return-type
    CheckOptions:
      readability-identifier-naming.VariableCase: snake_case
      readability-identifier-naming.FunctionCase: snake_case

Completion:
  AllScopes: Yes
  ArgumentLists: FullPlaceholders

InlayHints:
  BlockEnd: true
  Designators: false
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
  DefaultArguments: false
  TypeNameLimit: 12
